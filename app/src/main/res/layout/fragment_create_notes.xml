<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".ui.fragment.CreateNotesFragment">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_create_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0B0000"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/custom_bold"
            android:text="Create Notes"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/btn_save_notes"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_done" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:background="@color/black"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_create_notes">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/edt_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edit_text_shape"
                    android:fontFamily="@font/custom_bold"
                    android:hint="Title..."
                    android:maxLines="1"
                    android:padding="18sp"
                    android:textColor="@color/black"
                    android:textColorHint="#BDB9B9"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edt_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/edit_text_shape"
                    android:fontFamily="@font/custom_regular"
                    android:hint="Subtitle..."
                    android:maxLines="1"
                    android:padding="16sp"
                    android:textColor="@color/black"
                    android:textColorHint="#BDB9B9"
                    android:textSize="18sp" />


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/p_most"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:background="@drawable/most_shape"
                        android:backgroundTint="#850505"
                        android:textSize="10sp"
                        android:text="Most Important"
                        android:textColor="@color/white"/>

                    <View
                        android:layout_width="8.dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/p_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:background="@drawable/most_shape"
                        android:backgroundTint="#054B85"
                        android:textSize="10sp"
                        android:text="Medium Important"
                        android:textColor="@color/white"/>

                    <View
                        android:layout_width="8.dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/p_least"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:background="@drawable/most_shape"
                        android:backgroundTint="#058305"
                        android:textSize="10sp"
                        android:text="Least Important"
                        android:textColor="@color/white"/>


                </androidx.appcompat.widget.LinearLayoutCompat>

                <EditText
                    android:id="@+id/edt_notes"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/edit_text_shape"
                    android:fontFamily="@font/custom_regular"
                    android:gravity="start"
                    android:hint="Notes..."
                    android:padding="14sp"
                    android:textColor="@color/black"
                    android:textColorHint="#BDB9B9"
                    android:textSize="18sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>